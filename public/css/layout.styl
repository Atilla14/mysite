html, body
  width 100%
  height 100%
  margin 0
  padding 0

body
  background-color #ecf0f1
  display flex
  justify-content center
  align-items center
  flex-direction column

#atilla14-header
  font-family 'Roboto Condensed'
  color #455A64
  text-align center
  h1
    font-size 50px
  h3
    font-size 30px

#atilla14-footer
  position fixed
  right 0
  bottom 0
  min-height 30px
  width 100%
  display flex
  justify-content space-between
  align-items center
  font-family 'Roboto Condensed'
  color #455A64

  .viewed-container
    padding 5px
    height 100%
    display flex
    align-items center

  .share-container
    height 100%
    display flex
    padding 5px
    align-items center

    i
      color #455A64
      font-size 1.2em
      padding-right 5px
      transition color 200ms ease-in-out

      &:hover
        color #1abc9c
