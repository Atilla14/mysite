bland-color = #7f8c8d
neutral-color = #455A64
fail-color = #c0392b
success-color = #1abc9c

#atilla14-email-form
  height 150px
  width 50vw
  display flex
  justify-content center
  align-items flex-start
  padding-top 50px

  .form-input
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    width 80%

    #email
      border-top-left-radius 3px
      border-bottom-left-radius 3px
      border 2px solid neutral-color
      padding 10px
      border-right none
      font-size 17px
      width 100%
      box-sizing border-box
      color neutral-color
      transition color 250ms ease-in-out

      &.error
        color fail-color
      &.fatal-error
        animation shake 400ms ease 2
      &.success
        color success-color
      &.sent
        color neutral-color
      &.completed
        color bland-color
        border-color success-color

    #notice
      font-size 13px
      font-family 'Roboto Condensed'
      color neutral-color
      padding-left 10px
      padding-top 3px

  button
    background-color neutral-color
    border none
    outline none
    color white
    font-family 'Roboto Condensed'
    font-size 17px
    padding 10px
    border 2px solid transparent
    border-top-right-radius 3px
    border-bottom-right-radius 3px

    #button-loader
      display inline-block
      height 15px
      width 0
      opacity 0
      border-radius 100%
      margin-left 0px
      position relative
      transition all 200ms ease-in-out

      &:before
        content ''
        position absolute
        top 0
        left 0
        border 2px solid transparent
        border-top-color white
        border-radius 100%
        width 100%
        height 100%
        animation loading 500ms linear infinite

    &.processing
      #button-loader
        margin-left 10px
        width 15px
        opacity 1

    &.done
      background-color success-color

@keyframes shake
  0%
    transform translateY(0)
  33%
    transform translateY(5px)
  66%
    transform translateY(-5px)
  100%
    transform translateY(0)


@keyframes loading
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
